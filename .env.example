# ============================================
# VIRTUAL HOTEL MANAGEMENT - ENVIRONMENT VARIABLES
# ============================================
# This is a template file. Copy this to .env and fill in your actual values.
# NEVER commit the actual .env file to Git!

# ==========================================
# APPLICATION
# ==========================================
NODE_ENV=development

# ==========================================
# BACKEND
# ==========================================
# Server port
BACKEND_PORT=3000

# Database path (relative to backend directory)
DATABASE_PATH=./data/hotel.db

# API configuration
API_PREFIX=/api/v1

# ==========================================
# FRONTEND
# ==========================================
# Frontend development server port
FRONTEND_PORT=5173

# Backend API URL for frontend to connect to
VITE_API_URL=http://localhost:3000/api/v1

# ==========================================
# SECURITY
# ==========================================
# JWT secret (generate a strong random string for production)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Session secret (generate a strong random string for production)
SESSION_SECRET=your-super-secret-session-key-change-this-in-production

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# ==========================================
# OPTIONAL FEATURES
# ==========================================
# Enable logging (true/false)
ENABLE_LOGGING=true

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Enable seed data on startup (true/false)
AUTO_SEED=false